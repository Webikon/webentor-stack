<?xml version="1.0"?>
<ruleset name="Webentor">
  <description>Webentor Coding Standards</description>
  <!-- Scan all files in directory -->
  <file>.</file>
  <!-- Scan only PHP files -->
  <arg name="extensions" value="php"/>
  <!-- Ignore WordPress and Composer dependencies -->
  <exclude-pattern>.devbox</exclude-pattern>
  <exclude-pattern>web/wp</exclude-pattern>
  <exclude-pattern>web/app/mu-plugins/disable-comments.php</exclude-pattern>
  <exclude-pattern>web/app/plugins</exclude-pattern>
  <exclude-pattern>web/app/themes/</exclude-pattern>
  <exclude-pattern>vendor/</exclude-pattern>
  <!-- Show colors in console -->
  <arg value="-colors"/>
  <!-- Show sniff codes in all reports -->
  <arg value="ns"/>
  <!-- Use PSR-2 as a base -->
  <rule ref="PSR2"/>
</ruleset>